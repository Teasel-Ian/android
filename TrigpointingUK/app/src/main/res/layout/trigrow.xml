<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="1dp"
    android:layout_margin="4dp">

    <!-- Trig name -->
    <TextView
        android:id="@+id/trigName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Trig Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Trig distance -->
    <TextView
        android:id="@+id/trigDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0.0km"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Trig arrow -->
    <ImageView
        android:id="@+id/trigArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_00_n"
        android:padding="4dp" />

    <!-- Trig condition -->
    <ImageView
        android:id="@+id/trigCondition"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/c_good"
        android:padding="4dp" />

    <!-- Trig type -->
    <ImageView
        android:id="@+id/trigType"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/t_pillar"
        android:padding="4dp" />

    <!-- Trig logged status -->
    <ImageView
        android:id="@+id/trigLogged"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/c_good"
        android:padding="4dp" />

</LinearLayout> 