<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User info section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not logged in" />

    </LinearLayout>

    <!-- Count section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Pillar count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countPillarImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/t_pillar" />

            <TextView
                android:id="@+id/countPillarText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pillars: 0" />

        </LinearLayout>

        <!-- FBM count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countFbmImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/t_fbm" />

            <TextView
                android:id="@+id/countFbmText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FBM: 0" />

        </LinearLayout>

        <!-- Passive count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countPassiveImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/t_passive" />

            <TextView
                android:id="@+id/countPassiveText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Passive: 0" />

        </LinearLayout>

        <!-- Intersected count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countIntersectedImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/t_intersected" />

            <TextView
                android:id="@+id/countIntersectedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intersected: 0" />

        </LinearLayout>

        <!-- Unsynced count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countUnsyncedImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_refresh" />

            <TextView
                android:id="@+id/countUnsyncedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unsynced: 0" />

        </LinearLayout>

        <!-- Photos count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/countPhotosImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/countPhotosText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Photos: 0" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search" />

        <Button
            android:id="@+id/btnCrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Crash" />

        <Button
            android:id="@+id/btnNearest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearest" />

        <Button
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map" />

    </LinearLayout>

</LinearLayout>
